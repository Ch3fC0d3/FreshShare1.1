<%- contentFor('style') %>
<style>
    :root {
        --primary: #4CAF50;
        --primary-dark: #2E7D32;
        --primary-darker: #1B5E20;
        --primary-light: #81C784;
        --primary-lighter: #C8E6C9;
        --accent: #FFC107;
        --accent-dark: #FFA000;
        --text-dark: #263238;
        --text-medium: #546E7A;
        --text-light: #B0BEC5;
        --white: #FFFFFF;
        --off-white: #f9fafb;
        --light-green-bg: #f5f9f5;
        --shadow-sm: 0 2px 10px rgba(0, 0, 0, 0.04);
        --shadow-md: 0 4px 20px rgba(0, 0, 0, 0.06);
        --shadow-lg: 0 10px 30px rgba(0, 0, 0, 0.08);
        --border-radius-sm: 8px;
        --border-radius-md: 12px;
        --border-radius-lg: 20px;
        --transition: all 0.3s cubic-bezier(0.165, 0.84, 0.44, 1);
    }
    
    body {
        font-family: 'Poppins', 'Inter', sans-serif;
        background-color: var(--off-white);
        color: var(--text-medium);
        line-height: 1.6;
    }
    
    .forum-section {
        padding: 30px 0 0;
        min-height: auto;
    }
    
    .forum-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
    }
    
    .forum-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
        padding-bottom: 20px;
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    }
    
    .forum-header h1 {
        font-size: 2.5rem;
        color: var(--text-dark);
        font-weight: 700;
        margin: 0;
        position: relative;
        padding-left: 15px;
    }
    
    .forum-header h1::before {
        content: '';
        position: absolute;
        left: 0;
        top: 10%;
        height: 80%;
        width: 5px;
        background: linear-gradient(to bottom, var(--primary), var(--primary-light));
        border-radius: 3px;
    }
    
    /* New Post Button */
    .new-post-btn {
        padding: 12px 24px;
        background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
        color: var(--white);
        border: none;
        border-radius: var(--border-radius-md);
        font-weight: 600;
        font-size: 1rem;
        cursor: pointer;
        transition: var(--transition);
        display: inline-flex;
        align-items: center;
        box-shadow: 0 4px 15px rgba(76, 175, 80, 0.25);
    }
    
    .new-post-btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 20px rgba(76, 175, 80, 0.35);
    }
    
    .new-post-btn i {
        margin-right: 8px;
        font-size: 0.9rem;
    }
    
    /* Forum Filters */
    .forum-filters {
        background-color: var(--white);
        border-radius: var(--border-radius-md);
        padding: 15px 20px;
        margin-bottom: 20px;
        box-shadow: var(--shadow-sm);
        border: 1px solid rgba(0, 0, 0, 0.03);
    }
    
    .filter-container {
        display: flex;
        flex-wrap: wrap;
        gap: 15px;
        align-items: flex-end;
    }
    
    .filter-group {
        flex: 1;
        min-width: 200px;
        max-width: 250px;
    }
    
    .filter-label {
        color: var(--text-dark);
        font-weight: 500;
        font-size: 0.9rem;
        margin-bottom: 8px;
        display: block;
    }
    
    .form-select, .form-control {
        border: 1px solid rgba(0, 0, 0, 0.08);
        border-radius: var(--border-radius-sm);
        padding: 10px 15px;
        font-size: 0.95rem;
        color: var(--text-medium);
        background-color: #f8f9fa;
        transition: var(--transition);
        width: 100%;
        height: 42px;
    }
    
    .form-select:focus, .form-control:focus {
        border-color: var(--primary-light);
        box-shadow: 0 0 0 3px rgba(76, 175, 80, 0.15);
        outline: none;
    }
    
    .custom-select-wrapper {
        position: relative;
        width: 100%;
    }
    
    .select-arrow {
        position: absolute;
        right: 15px;
        top: 50%;
        transform: translateY(-50%);
        color: var(--text-medium);
        pointer-events: none;
        font-size: 0.8rem;
    }
    
    .search-container {
        position: relative;
        width: 100%;
    }
    
    .search-container i {
        position: absolute;
        right: 15px;
        top: 50%;
        transform: translateY(-50%);
        color: var(--text-light);
    }
    
    .filter-actions {
        display: flex;
        gap: 10px;
    }
    
    .filter-btn {
        background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
        color: var(--white);
        border: none;
        border-radius: var(--border-radius-sm);
        padding: 10px 15px;
        height: 42px;
        font-weight: 500;
        display: flex;
        align-items: center;
        gap: 8px;
        cursor: pointer;
        transition: var(--transition);
        white-space: nowrap;
    }
    
    .filter-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(76, 175, 80, 0.2);
    }
    
    .filter-reset {
        background-color: transparent;
        color: var(--text-medium);
        border: 1px solid rgba(0, 0, 0, 0.08);
        border-radius: var(--border-radius-sm);
        padding: 10px 15px;
        height: 42px;
        font-weight: 500;
        display: flex;
        align-items: center;
        gap: 8px;
        cursor: pointer;
        transition: var(--transition);
        white-space: nowrap;
    }
    
    .filter-reset:hover {
        background-color: #f1f3f5;
    }
    
    /* Forum Posts */
    .forum-posts {
        display: flex;
        flex-direction: column;
        gap: 10px;
        margin-bottom: 0;
    }
    
    .forum-card {
        background-color: var(--white);
        border-radius: var(--border-radius-md);
        padding: 25px;
        box-shadow: var(--shadow-sm);
        transition: var(--transition);
        border: 1px solid rgba(0, 0, 0, 0.03);
        position: relative;
        overflow: hidden;
    }
    
    .forum-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 4px;
        height: 100%;
        background: linear-gradient(to bottom, var(--primary), var(--primary-light));
        opacity: 0;
        transition: var(--transition);
    }
    
    .forum-card:hover {
        transform: translateY(-5px);
        box-shadow: var(--shadow-md);
    }
    
    .forum-card:hover::before {
        opacity: 1;
    }
    
    .post-header {
        display: flex;
        align-items: center;
        margin-bottom: 15px;
    }
    
    .user-avatar {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        margin-right: 15px;
        border: 2px solid var(--primary-lighter);
        object-fit: cover;
    }
    
    .post-user-info h5 {
        margin: 0;
        color: var(--text-dark);
        font-weight: 600;
        font-size: 1.1rem;
    }
    
    .post-meta {
        color: var(--text-light);
        font-size: 0.85rem;
        display: flex;
        align-items: center;
        margin-top: 4px;
    }
    
    .post-meta span {
        display: inline-flex;
        align-items: center;
    }
    
    .category-badge {
        display: inline-block;
        background-color: var(--primary-lighter);
        color: var(--primary-dark);
        font-size: 0.75rem;
        font-weight: 600;
        padding: 3px 10px;
        border-radius: 12px;
        margin-left: 10px;
    }
    
    .post-content {
        margin-bottom: 20px;
        padding-left: 65px;
    }
    
    .post-content h4 {
        color: var(--text-dark);
        font-size: 1.25rem;
        font-weight: 600;
        margin-bottom: 10px;
    }
    
    .post-content p {
        color: var(--text-medium);
        font-size: 0.95rem;
        margin: 0;
    }
    
    .post-actions {
        display: flex;
        gap: 20px;
        padding-left: 65px;
    }
    
    .action-item {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        color: var(--text-medium);
        font-size: 0.9rem;
        font-weight: 500;
        cursor: pointer;
        transition: var(--transition);
    }
    
    .action-item:hover {
        color: var(--primary);
    }
    
    .action-item i {
        font-size: 1.1rem;
    }
    
    .action-item.liked {
        color: #e53935;
    }
    
    .action-item.liked i {
        font-weight: 900;
    }
    
    .action-item.saved {
        color: var(--accent-dark);
    }
    
    .action-item.saved i {
        font-weight: 900;
    }
    
    /* Featured Post */
    .forum-card.featured {
        border: 1px solid var(--primary-lighter);
        background-color: #fcfffc;
    }
    
    .forum-card.featured::before {
        opacity: 1;
        width: 6px;
    }
    
    .featured-badge {
        position: absolute;
        top: 20px;
        right: 20px;
        background: linear-gradient(135deg, var(--accent) 0%, var(--accent-dark) 100%);
        color: var(--white);
        font-size: 0.75rem;
        font-weight: 600;
        padding: 3px 10px;
        border-radius: 12px;
        display: inline-flex;
        align-items: center;
        gap: 5px;
    }
    
    .featured-badge i {
        font-size: 0.7rem;
    }
    
    /* Create Post Modal */
    .modal-content {
        border: none;
        border-radius: var(--border-radius-md);
        box-shadow: var(--shadow-lg);
    }
    
    .modal-header {
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
        padding: 20px 25px;
    }
    
    .modal-title {
        color: var(--text-dark);
        font-weight: 600;
        font-size: 1.3rem;
    }
    
    .modal-body {
        padding: 25px;
    }
    
    .form-label {
        color: var(--text-dark);
        font-weight: 500;
        font-size: 0.95rem;
        margin-bottom: 8px;
    }
    
    .modal-footer {
        border-top: 1px solid rgba(0, 0, 0, 0.05);
        padding: 20px 25px;
    }
    
    .btn-secondary {
        background-color: #f1f3f5;
        color: var(--text-dark);
        border: none;
        padding: 10px 20px;
        border-radius: var(--border-radius-sm);
        font-weight: 500;
        transition: var(--transition);
    }
    
    .btn-secondary:hover {
        background-color: #e9ecef;
    }
    
    .btn-primary {
        background-color: var(--primary);
        border: none;
        padding: 10px 25px;
        border-radius: var(--border-radius-sm);
        font-weight: 500;
        transition: var(--transition);
    }
    
    .btn-primary:hover {
        background-color: var(--primary-dark);
    }
    
    /* Create Post Styles */
    .forum-section {
    padding: 60px 0 40px; /* Added more padding */
}

.create-post-section {
    background-color: var(--light-green-bg);
    padding: 60px 0;
    margin-top: 60px; /* Increased margin to create more separation */
}

.create-post-card {
    background-color: var(--white);
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow-md);
    padding: 40px;
    max-width: 900px;
    margin: 0 auto;
    position: relative;
    overflow: hidden;
    transform: translateY(-30px); /* Slight lift to create visual separation */
}

.forum-posts {
    margin-bottom: 40px; /* Added margin to bottom of posts */
}

@media (max-width: 768px) {
    .create-post-section {
        margin-top: 40px;
    }
    
    .create-post-card {
        transform: translateY(-20px);
    }
}
    .create-post-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 6px;
