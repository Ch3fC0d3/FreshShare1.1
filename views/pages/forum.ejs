    }
    
    .create-post-header {
        margin-bottom: 30px;
        padding-bottom: 20px;
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    }
    
    .create-post-header h2 {
        font-size: 2rem;
        color: var(--text-dark);
        font-weight: 700;
        margin-bottom: 10px;
    }
    
    .create-post-header p {
        color: var(--text-medium);
        font-size: 1.1rem;
    }
    
    .create-post-form {
        display: flex;
        flex-direction: column;
        gap: 25px;
    }
    
    .form-row {
        width: 100%;
    }
    
    .form-group {
        width: 100%;
    }
    
    .form-label {
        color: var(--text-dark);
        font-weight: 600;
        font-size: 1rem;
        margin-bottom: 10px;
        display: block;
    }
    
    .required {
        color: #e53935;
        margin-left: 4px;
    }
    
    .custom-select-wrapper {
        position: relative;
    }
    
    .select-arrow {
        position: absolute;
        right: 15px;
        top: 50%;
        transform: translateY(-50%);
        color: var(--text-medium);
        pointer-events: none;
    }
    
    .content-editor {
        border: 1px solid rgba(0, 0, 0, 0.08);
        border-radius: var(--border-radius-sm);
        overflow: hidden;
    }
    
    .editor-toolbar {
        display: flex;
        gap: 10px;
        padding: 10px 15px;
        background-color: #f8f9fa;
        border-bottom: 1px solid rgba(0, 0, 0, 0.08);
    }
    
    .toolbar-btn {
        background: none;
        border: none;
        color: var(--text-medium);
        width: 35px;
        height: 35px;
        border-radius: 4px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: var(--transition);
    }
    
    .toolbar-btn:hover {
        background-color: var(--white);
        color: var(--primary);
    }
    
    .content-textarea {
        border: none;
        border-radius: 0;
        resize: vertical;
        min-height: 200px;
        padding: 15px;
        font-size: 1rem;
    }
    
    .media-upload-area {
        margin-top: 10px;
    }
    
    .file-input {
        display: none;
    }
    
    .upload-area {
        border: 2px dashed var(--primary-light);
        border-radius: var(--border-radius-md);
        padding: 30px;
        text-align: center;
        cursor: pointer;
        transition: var(--transition);
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 15px;
    }
    
    .upload-area:hover {
        background-color: var(--light-green-bg);
    }
    
    .upload-icon {
        font-size: 2.5rem;
        color: var(--primary);
        margin-bottom: 10px;
    }
    
    .upload-text {
        display: flex;
        flex-direction: column;
        gap: 5px;
    }
    
    .upload-title {
        font-size: 1.1rem;
        color: var(--text-dark);
        font-weight: 500;
    }
    
    .upload-subtitle {
        font-size: 0.9rem;
        color: var(--text-medium);
    }
    
    .media-preview {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        margin-top: 15px;
    }
    
    .preview-item {
        width: 100px;
        height: 100px;
        border-radius: var(--border-radius-sm);
        overflow: hidden;
        position: relative;
    }
    
    .preview-item img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    
    .remove-preview {
        position: absolute;
        top: 5px;
        right: 5px;
        width: 20px;
        height: 20px;
        background-color: rgba(0, 0, 0, 0.5);
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 10px;
        cursor: pointer;
    }
    
    .form-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 20px;
        padding-top: 20px;
        border-top: 1px solid rgba(0, 0, 0, 0.05);
    }
    
    .action-info {
        color: var(--text-medium);
        font-size: 0.9rem;
    }
    
    .action-buttons {
        display: flex;
        gap: 15px;
    }
    
    .btn-cancel {
        background-color: #f1f3f5;
        color: var(--text-dark);
        border: none;
        padding: 12px 24px;
        border-radius: var(--border-radius-md);
        font-weight: 500;
        font-size: 1rem;
        cursor: pointer;
        transition: var(--transition);
    }
    
    .btn-cancel:hover {
        background-color: #e9ecef;
    }
    
    .btn-publish {
        padding: 12px 24px;
        background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
        color: var(--white);
        border: none;
        border-radius: var(--border-radius-md);
        font-weight: 600;
        font-size: 1rem;
        cursor: pointer;
        transition: var(--transition);
        display: inline-flex;
        align-items: center;
        gap: 8px;
        box-shadow: 0 4px 15px rgba(76, 175, 80, 0.25);
    }
    
    .btn-publish:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 20px rgba(76, 175, 80, 0.35);
    }

    /* Responsive */
    @media (max-width: 992px) {
        .forum-section {
            padding: 80px 0 60px;
        }
        
        .forum-header h1 {
            font-size: 2.2rem;
        }
        
        .post-content, .post-actions {
            padding-left: 0;
        }
        
        .create-post-card {
            padding: 30px;
        }
        
        .create-post-header h2 {
            font-size: 1.8rem;
        }
    }
    
    @media (max-width: 768px) {
        .forum-header {
            flex-direction: column;
            align-items: flex-start;
            gap: 15px;
        }
        
        .forum-header h1 {
            font-size: 2rem;
        }
        
        .filter-container {
            flex-direction: column;
            gap: 15px;
        }
        
        .filter-group {
            width: 100%;
        }
        
        .filter-actions {
            width: 100%;
            justify-content: space-between;
        }
        
        .filter-btn, .filter-reset {
            flex: 1;
            justify-content: center;
        }
        
        .forum-card {
            padding: 20px;
        }
        
        .create-post-section {
            padding: 40px 0;
        }
        
        .create-post-card {
            padding: 25px;
        }
        
        .form-actions {
            flex-direction: column;
            gap: 15px;
            align-items: flex-start;
        }
        
        .action-buttons {
            width: 100%;
        }
        
        .btn-cancel, .btn-publish {
            flex: 1;
            text-align: center;
            justify-content: center;
        }
    }
    
    @media (max-width: 576px) {
        .post-header {
            flex-direction: column;
            align-items: flex-start;
        }
        
        .user-avatar {
            margin-bottom: 10px;
        }
        
        .post-content, .post-actions {
            padding-left: 0;
        }
        
        .post-actions {
            flex-wrap: wrap;
        }
        
        .create-post-card {
            padding: 20px;
        }
        
        .editor-toolbar {
            flex-wrap: wrap;
        }
    }
</style>

<%- contentFor('body') %>
<section class="forum-section">
    <div class="forum-container">
        <div class="forum-header">
            <h1>Community Forum</h1>
            <button class="new-post-btn" onclick="document.querySelector('.create-post-section').scrollIntoView({behavior: 'smooth'});">
                <i class="fas fa-plus"></i> New Post
            </button>
        </div>

        <!-- Forum Filters -->
        <div class="forum-filters">
            <div class="filter-container">
                <div class="filter-group">
                    <label class="filter-label">Filter by Category</label>
                    <div class="custom-select-wrapper">
                        <select class="form-select">
                            <option>All Categories</option>
                            <option>Questions</option>
                            <option>Discussion</option>
                            <option>Tips & Tricks</option>
                            <option>Recipes</option>
                            <option>Success Stories</option>
                        </select>
                        <i class="fas fa-chevron-down select-arrow"></i>
                    </div>
                </div>
                <div class="filter-group">
                    <label class="filter-label">Sort by</label>
                    <div class="custom-select-wrapper">
                        <select class="form-select">
                            <option>Most Recent</option>
                            <option>Most Popular</option>
                            <option>Most Commented</option>
                            <option>Trending</option>
                        </select>
                        <i class="fas fa-chevron-down select-arrow"></i>
                    </div>
                </div>
                <div class="filter-group">
                    <label class="filter-label">Search</label>
                    <div class="search-container">
                        <input type="text" class="form-control" placeholder="Search posts...">
                        <i class="fas fa-search"></i>
                    </div>
                </div>
                <div class="filter-actions">
                    <button class="filter-btn">
                        <i class="fas fa-filter"></i> 
                        <span>Apply Filters</span>
                    </button>
                    <button class="filter-reset">
                        <i class="fas fa-times"></i>
                        <span>Reset</span>
                    </button>
                </div>
            </div>
        </div>

        <!-- Forum Posts -->
        <div class="forum-posts">
            <!-- Featured Post -->
            <div class="forum-card featured">
                <div class="featured-badge">
                    <i class="fas fa-star"></i> Featured
                </div>
                <div class="post-header">
                    <img src="/api/placeholder/100/100" alt="User Avatar" class="user-avatar">
                    <div class="post-user-info">
                        <h5>Emma Johnson</h5>
                        <div class="post-meta">
                            <span><i class="far fa-clock me-1"></i> 1 day ago</span>
                            <span class="category-badge">Success Story</span>
                        </div>
                    </div>
                </div>
                <div class="post-content">
                    <h4>How FreshShare changed my relationship with food waste</h4>
                    <p>I used to throw away so much produce before it could be used. After joining FreshShare, I've cut my food waste by 80% and saved over $200 monthly! Here's how my journey started...</p>
                </div>
                <div class="post-actions">
                    <div class="action-item liked">
                        <i class="fas fa-heart"></i>
                        <span>48 Likes</span>
                    </div>
                    <div class="action-item">
                        <i class="far fa-comment"></i>
                        <span>23 Comments</span>
                    </div>
                    <div class="action-item saved">
                        <i class="fas fa-bookmark"></i>
                        <span>Saved</span>
                    </div>
                </div>
            </div>
            
            <!-- Regular Post -->
            <div class="forum-card">
                <div class="post-header">
