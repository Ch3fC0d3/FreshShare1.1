<%- contentFor('style') %>
<link rel="stylesheet" href="/css/main.css">
<style>
    body {
        background-color: #f5f7fa;
    }
    
    .profile-container {
        width: 95%;
        margin: 30px auto;
        background: transparent;
    }
    
    .card {
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.05);
        overflow: hidden;
        transition: all 0.2s ease;
        border: none;
        margin-bottom: 30px;
    }
    
    .card-header {
        background-color: #fff;
        border-bottom: 1px solid #f0f0f0;
        padding: 20px 25px;
    }
    
    .card-body {
        padding: 25px;
    }
    
    .section-title {
        font-size: 24px;
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 0;
    }
    
    .section-subtitle {
        font-size: 18px;
        font-weight: 600;
        color: #3d4852;
        margin: 0 0 20px 0;
    }
    
    .profile-header {
        display: flex;
        align-items: center;
        margin-bottom: 30px;
    }
    
    .profile-image-container {
        width: 120px;
        height: 120px;
        border-radius: 12px;
        overflow: hidden;
        position: relative;
        border: 3px solid #fff;
        box-shadow: 0 3px 10px rgba(0,0,0,0.1);
    }
    
    .profile-image-container img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    
    .profile-upload-overlay {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        background: rgba(0,0,0,0.6);
        padding: 8px 0;
        text-align: center;
        color: white;
        font-size: 12px;
        cursor: pointer;
        transition: all 0.2s ease;
    }
    
    .profile-upload-overlay:hover {
        background: rgba(0,0,0,0.8);
    }
    
    .profile-intro {
        margin-left: 30px;
    }
    
    .profile-intro h2 {
        font-size: 22px;
        margin-bottom: 5px;
        color: #2c3e50;
    }
    
    .profile-intro p {
        color: #7f8c8d;
        margin-bottom: 15px;
    }
    
    .form-control {
        border-radius: 8px;
        padding: 12px 15px;
        border: 1px solid #e1e5eb;
        font-size: 14px;
        transition: all 0.2s ease;
    }
    
    .form-control:focus {
        border-color: #3498db;
        box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.15);
    }
    
    label {
        font-weight: 500;
        color: #34495e;
        margin-bottom: 8px;
        font-size: 14px;
    }
    
    .form-row {
        margin-left: -10px;
        margin-right: -10px;
    }
    
    .form-row > .col,
    .form-row > [class*="col-"] {
        padding-left: 10px;
        padding-right: 10px;
    }
    
    .btn {
        padding: 10px 20px;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.2s ease;
    }
    
    .btn-primary {
        background: #3498db;
        border-color: #3498db;
        color: white;
    }
    
    .btn-primary:hover {
        background: #2980b9;
        border-color: #2980b9;
    }
    
    .btn-secondary {
        background: #f1f3f5;
        border-color: #f1f3f5;
        color: #34495e;
    }
    
    .btn-secondary:hover {
        background: #e9ecef;
        border-color: #e9ecef;
    }
    
    .btn-outline-primary {
        border-color: #3498db;
        color: #3498db;
    }
    
    .btn-outline-primary:hover {
        background: #3498db;
        color: white;
    }
    
    .form-section {
        margin-bottom: 15px;
    }
    
    .form-actions {
        padding-top: 20px;
        border-top: 1px solid #f0f0f0;
        margin-top: 20px;
        display: flex;
        justify-content: flex-end;
        gap: 10px;
    }
    
    .group-item {
        background: #f9f9f9;
        border-radius: 10px;
        padding: 15px;
        margin-bottom: 15px;
        display: flex;
        align-items: center;
        transition: all 0.3s ease;
        border: 1px solid #f0f0f0;
    }
    
    .group-item:hover {
        box-shadow: 0 3px 10px rgba(0,0,0,0.05);
        transform: translateY(-2px);
    }
    
    .group-item img {
        width: 50px;
        height: 50px;
        border-radius: 10px;
        margin-right: 15px;
        object-fit: cover;
    }
    
    .group-item .group-name {
        font-weight: 600;
        font-size: 16px;
        color: #2c3e50;
        margin-bottom: 3px;
    }
    
    .group-item .group-role {
        font-size: 13px;
        color: #7f8c8d;
    }
    
    .group-link {
        margin-left: auto;
        border-radius: 8px;
        padding: 6px 12px;
        font-size: 14px;
    }
    
    .empty-state {
        background: #f9f9f9;
        border-radius: 10px;
        padding: 30px;
        text-align: center;
        border: 1px dashed #dde1e5;
    }
    
    .empty-state i {
        font-size: 40px;
        color: #bdc3c7;
        margin-bottom: 15px;
        display: block;
    }
    
    .empty-state p {
        color: #7f8c8d;
        font-size: 16px;
        margin-bottom: 15px;
    }
    
    .switch-container {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 15px;
        padding: 12px 15px;
        background: #f9f9f9;
        border-radius: 8px;
        border: 1px solid #f0f0f0;
    }
    
    .switch-container .switch-label {
        font-size: 14px;
        color: #34495e;
        font-weight: 500;
        margin-bottom: 0;
    }
    
    .switch {
        position: relative;
        display: inline-block;
        width: 44px;
        height: 22px;
    }
    
    .switch input {
        opacity: 0;
        width: 0;
        height: 0;
    }
    
    .slider {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #dfe6e9;
        transition: .4s;
        border-radius: 22px;
    }
    
    .slider:before {
        position: absolute;
        content: "";
        height: 16px;
        width: 16px;
        left: 3px;
        bottom: 3px;
        background-color: white;
        transition: .4s;
        border-radius: 50%;
    }
    
    input:checked + .slider {
        background-color: #3498db;
    }
    
    input:checked + .slider:before {
        transform: translateX(22px);
    }
    
    .account-link {
        display: flex;
        align-items: center;
        background: #f9f9f9;
        border-radius: 10px;
        padding: 15px;
        margin-bottom: 15px;
        border: 1px solid #f0f0f0;
        transition: all 0.3s ease;
    }
    
    .account-link:hover {
        box-shadow: 0 3px 10px rgba(0,0,0,0.05);
        transform: translateY(-2px);
    }
    
    .account-link i {
        font-size: 20px;
        margin-right: 15px;
        width: 24px;
        text-align: center;
    }
    
    .account-link .account-name {
        font-weight: 500;
        margin-bottom: 0;
    }
    
    .account-link .account-status {
        font-size: 13px;
        color: #95a5a6;
    }
    
    .alert {
        border-radius: 8px;
        padding: 15px 20px;
        border: none;
        margin-bottom: 20px;
    }
    
    .nav-tabs {
        border-bottom: none;
        margin-bottom: 25px;
    }
    
    .nav-tabs .nav-item {
        margin-right: 10px;
    }
    
    .nav-tabs .nav-link {
        border: none;
        padding: 10px 20px;
        border-radius: 8px;
        font-weight: 500;
        color: #7f8c8d;
        background: #f1f3f5;
    }
    
    .nav-tabs .nav-link.active {
        color: #3498db;
        background: rgba(52, 152, 219, 0.1);
    }
    
    .section-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 20px;
    }
    
    .section-header h3 {
        margin-bottom: 0;
    }
    
    @media (max-width: 767px) {
        .profile-header {
            flex-direction: column;
            text-align: center;
        }
        
        .profile-image-container {
            margin: 0 auto 20px;
        }
        
        .profile-intro {
            margin-left: 0;
        }
        
        .profile-container {
            width: 100%;
            padding: 0 15px;
        }
    }
</style>

