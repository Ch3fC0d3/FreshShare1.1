        const viewPublicProfileBtn = document.getElementById('viewPublicProfile');
        if (viewPublicProfileBtn) {
            viewPublicProfileBtn.addEventListener('click', function() {
                window.open('/profile/public', '_blank');
            });
        }
        
        // Handle social account connections
        const connectButtons = document.querySelectorAll('.connect-account');
