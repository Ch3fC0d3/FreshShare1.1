                            <div class="group-meta">
                                <div class="group-members">
                                    <i class="fas fa-users"></i> 38 members
                                </div>
                                <div class="group-location">
                                    <i class="fas fa-map-marker-alt"></i> 1.2 miles
                                </div>
                            </div>
                            <a href="#" class="join-group-btn mt-3">Join Group</a>
                        </div>
                    </div>
                    
                    <!-- Group 3 -->
                    <div class="group-card">
                        <img src="https://source.unsplash.com/random/300x160/?farmers" alt="Group" class="group-card-image">
                        <div class="group-card-content">
                            <h3 class="group-name">Local Farmers Network</h3>
                            <p class="group-description">Connect with local farmers to exchange produce, knowledge, and farming techniques.</p>
                            <div class="group-meta">
                                <div class="group-members">
                                    <i class="fas fa-users"></i> 27 members
                                </div>
                                <div class="group-location">
                                    <i class="fas fa-map-marker-alt"></i> 3.7 miles
                                </div>
                            </div>
                            <a href="#" class="join-group-btn mt-3">Join Group</a>
                        </div>
                    </div>
                    
                    <!-- Group 4 -->
                    <div class="group-card">
                        <img src="https://source.unsplash.com/random/300x160/?community" alt="Group" class="group-card-image">
                        <div class="group-card-content">
                            <h3 class="group-name">Neighborhood Food Share</h3>
                            <p class="group-description">A neighborhood initiative to reduce food waste and build community through sharing.</p>
                            <div class="group-meta">
                                <div class="group-members">
                                    <i class="fas fa-users"></i> 65 members
                                </div>
                                <div class="group-location">
                                    <i class="fas fa-map-marker-alt"></i> 0.8 miles
                                </div>
                            </div>
                            <a href="#" class="join-group-btn mt-3">Join Group</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Mobile bottom navigation -->
    <div class="mobile-nav">
        <div class="mobile-nav-inner">
            <a href="/dashboard" class="nav-item">
                <i class="fas fa-home"></i>
                <span>Home</span>
            </a>
            <a href="/marketplace" class="nav-item">
                <i class="fas fa-store"></i>
                <span>Market</span>
            </a>
            <a href="/groups" class="nav-item active">
                <i class="fas fa-users"></i>
                <span>Groups</span>
            </a>
            <a href="/forum" class="nav-item">
                <i class="fas fa-comments"></i>
                <span>Forum</span>
            </a>
            <a href="/profile" class="nav-item">
                <i class="fas fa-user"></i>
