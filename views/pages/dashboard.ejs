            color: var(--text-light);
        }

        .order-items {
            margin-bottom: 0.75rem;
            font-size: 0.9rem;
            color: var(--text-light);
        }

        .order-footer {
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .order-total {
            font-weight: 600;
        }

        .order-actions {
