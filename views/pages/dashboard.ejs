            border-top: 1px solid rgba(255, 255, 255, 0.1);
            text-align: center;
            color: var(--gray-medium);
            font-size: 0.8rem;
        }

        /* Responsive Design */
        @media (max-width: 1200px) {
            .dashboard-grid {
