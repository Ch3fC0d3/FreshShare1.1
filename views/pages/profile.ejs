<%- contentFor('style') %>
<style>
    /* Variables for consistent styling */
    :root {
        --primary: #2E7D32;
        --primary-light: #4CAF50;
        --primary-dark: #1B5E20;
        --secondary: #F5F5F5;
        --text-dark: #333;
        --text-light: #666;
        --border: #E0E0E0;
        --card-shadow: 0 4px 6px rgba(0,0,0,0.1);
        --border-radius: 15px;
        --spacing-sm: 0.5rem;
        --spacing-md: 1rem;
        --spacing-lg: 1.5rem;
        --spacing-xl: 2rem;
    }

    /* Layout containers */
    .profile-container {
        max-width: 1200px;
        margin: var(--spacing-xl) auto;
        padding: 0 var(--spacing-md);
    }

    /* Profile header section */
    .profile-header {
        background: white;
        border-radius: var(--border-radius);
        padding: var(--spacing-xl);
        margin-bottom: var(--spacing-xl);
        box-shadow: var(--card-shadow);
    }

    .profile-info {
        display: grid;
        grid-template-columns: auto 1fr auto;
        gap: var(--spacing-xl);
        align-items: center;
    }

    .profile-avatar {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        overflow: hidden;
        background: var(--secondary);
        box-shadow: var(--card-shadow);
    }

    .profile-avatar img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .profile-details h1 {
        margin: 0 0 var(--spacing-sm) 0;
        color: var(--text-dark);
        font-size: 2rem;
    }

    .profile-details p {
        margin: 0;
        color: var(--text-light);
    }

    .profile-actions {
        margin-top: var(--spacing-md);
        display: flex;
        gap: var(--spacing-md);
    }

    /* Statistics grid */
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        gap: var(--spacing-lg);
        margin: var(--spacing-xl) 0;
    }

    .stat-card {
        background: white;
        padding: var(--spacing-lg);
        border-radius: var(--border-radius);
        box-shadow: var(--card-shadow);
        transition: transform 0.2s ease-in-out;
    }

    .stat-card:hover {
        transform: translateY(-5px);
    }

    .stat-label {
        color: var(--text-light);
        font-size: 0.9rem;
        margin-bottom: var(--spacing-sm);
    }

    .stat-value {
        font-size: 2.5rem;
        font-weight: 600;
        color: var(--text-dark);
        margin-bottom: var(--spacing-md);
    }

    .stat-footer {
        font-size: 0.9rem;
        display: flex;
        align-items: center;
    }

    .trend-up {
        color: var(--primary);
        display: flex;
        align-items: center;
    }

    .trend-down {
        color: #F44336;
        display: flex;
        align-items: center;
    }

    .trend-icon {
        margin-right: var(--spacing-sm);
    }

    /* Charts section */
    .charts-section {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(500px, 1fr));
        gap: var(--spacing-xl);
        margin: var(--spacing-xl) 0;
    }

    .chart-card {
        background: white;
        border-radius: var(--border-radius);
        padding: var(--spacing-lg);
        box-shadow: var(--card-shadow);
    }

    .chart-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: var(--spacing-lg);
    }

    .chart-header h2 {
        margin: 0;
        font-size: 1.25rem;
        color: var(--text-dark);
    }

    .chart-actions {
        display: flex;
        gap: var(--spacing-sm);
    }

    .chart-btn {
        background: var(--secondary);
        border: none;
        padding: var(--spacing-sm) var(--spacing-md);
        border-radius: 8px;
        color: var(--text-dark);
        cursor: pointer;
        transition: all 0.2s ease;
        font-weight: 500;
    }

    .chart-btn:hover,
    .chart-btn.active {
        background: var(--primary);
        color: white;
    }

    .chart-container {
        height: 300px;
        position: relative;
    }

    /* Profile sections */
    .profile-sections {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        gap: var(--spacing-xl);
        margin-top: var(--spacing-xl);
    }

    .profile-section {
        background: white;
        border-radius: var(--border-radius);
        padding: var(--spacing-lg);
        box-shadow: var(--card-shadow);
    }

    .section-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: var(--spacing-lg);
    }

    .section-header h2 {
        margin: 0;
        font-size: 1.25rem;
        color: var(--text-dark);
    }

    .edit-btn {
        background: none;
        border: none;
        color: var(--primary);
        cursor: pointer;
        padding: 0;
        font-weight: 500;
        transition: color 0.2s ease;
    }

    .edit-btn:hover {
        color: var(--primary-dark);
        text-decoration: underline;
    }

    /* Activity list */
    .activity-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .activity-item {
        display: flex;
        align-items: flex-start;
        gap: var(--spacing-md);
        padding: var(--spacing-md) 0;
        border-bottom: 1px solid var(--border);
        transition: background-color 0.2s ease;
    }

    .activity-item:last-child {
        border-bottom: none;
    }

    .activity-item:hover {
        background-color: var(--secondary);
    }

    .activity-icon {
        width: 2.5rem;
        height: 2.5rem;
        border-radius: 50%;
        background: var(--primary-light);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        flex-shrink: 0;
    }

    .activity-content {
        flex: 1;
    }

    .activity-title {
        margin: 0 0 var(--spacing-sm) 0;
        color: var(--text-dark);
        font-weight: 500;
    }

    .activity-time {
        font-size: 0.875rem;
        color: var(--text-light);
    }

    /* Responsive adjustments */
    @media (max-width: 768px) {
        .profile-info {
            grid-template-columns: 1fr;
            text-align: center;
        }

        .profile-avatar {
            margin: 0 auto;
        }

        .profile-actions {
            justify-content: center;
        }

        .charts-section {
            grid-template-columns: 1fr;
        }
    }
</style>

<div class="profile-container">
